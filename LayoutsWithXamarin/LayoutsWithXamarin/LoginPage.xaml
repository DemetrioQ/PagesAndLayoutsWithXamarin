<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutsWithXamarin.LoginPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White"  VerticalOptions="Center" Margin="10">
            <Image Source="IntecIcono" HeightRequest="150"></Image>
            <Entry x:Name ="email" Placeholder="Email" HorizontalOptions="FillAndExpand"></Entry>
            <Entry x:Name="password" Placeholder="Password" IsPassword="True" HorizontalOptions="FillAndExpand" ></Entry>
            <Button Text="Login" TextColor="White" BackgroundColor="Red" HorizontalOptions="FillAndExpand"  Clicked="LoginButton_Clicked"></Button>
            <Button Text="Register" TextColor="Red" BackgroundColor="White" Clicked="RegisterButton_Clicked"  HorizontalOptions="Center"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
